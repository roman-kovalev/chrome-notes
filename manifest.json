{
    "name": "Chrome Notes",
    "version": "1.0",
    "description": "Extesion to store simple text notes",
    "manifest_version": 2,
    "permissions": ["storage", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "show-search-notes-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+9"
            },
            "description": "Show note search popup",
            "global": true
        }
    }
}